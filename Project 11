#Flask API Project
from flask import Flask
app = Flask(__name__)

@app.route("/")
def home():
    return """
    <!DOCTYPE html>
    <html>
    <head>
    <title>Background Color</title>
    <style>
    body {
    background-color: lightblue; /* You can change this color */
    }
    </style>
    </head>
    <body>
    <h1>Welcome!</h1>
    <p>This page has a background color.</p>
    """
if __name__=='__main__':
    app.run()
